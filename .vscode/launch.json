{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            // "python": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/app.py",
            "env": {
                "FLASK_APP": "${workspaceRoot}/app.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run"
            ],
            "envFile": "${workspaceFolder}/.venv",
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}